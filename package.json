{
  "name": "system-service-monitor",
  "version": "1.1.2",
  "main": "main.js",
  "description": "Essential system service and resource monitoring utility for Ubuntu systems",
  "author": "Shivansh",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --linux",
    "deploy": "electron-builder build --linux --publish always",
    "publish": "electron-builder build --linux --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navgurukul/ubuntu-management-app.git"
  },
  "build": {
    "appId": "com.shivansh.system-service-monitor",
    "productName": "System Service Monitor",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "navgurukul",
        "repo": "ubuntu-management-app"
      }
    ],
    "linux": {
      "target": "deb",
      "maintainer": "Shivansh",
      "category": "System",
      "executableArgs": [
        "--no-sandbox"
      ],
      "desktop": {
        "Name": "System Service Monitor",
        "Comment": "Monitor and manage system services",
        "Categories": "System;Monitor;Utility;",
        "Type": "Application"
      }
    },
    "files": [
      "**/*",
      "!**/channel.json",
      "!**/config.json"
    ],
    "deb": {
      "priority": "optional",
      "depends": [],
      "description": "System service and resource monitoring utility for Ubuntu systems"
    }
  },
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^11.5.0",
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.9",
    "express": "^4.20.0",
    "html5-websocket": "^2.0.4",
    "openai": "^4.60.0",
    "reconnecting-websocket": "^4.4.0",
    "shelljs": "^0.8.5",
    "sqlite3": "^5.1.7",
    "wallpaper": "^7.2.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}